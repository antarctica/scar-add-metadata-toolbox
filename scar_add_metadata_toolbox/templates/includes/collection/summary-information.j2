<section class="bsk-sidebar bsk-sidebar-default app-collection-summary">
    <dl class="bsk-dl-horizontal">
        <dt>Items:</dt>
        <dd>{{ collection['items'] | length }}</dd>
        <dt>Topic:</dt>
        <dd>{{ collection.topic }}</dd>
        <dt>Publishers:</dt>
        <dd>{{ collection.publishers | join(',') }}</dd>
    </dl>
    <h3>Summary</h3>
    <div>{{ collection.description }}</div>
</section>
