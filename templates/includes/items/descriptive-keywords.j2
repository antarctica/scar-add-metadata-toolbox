<section class="app-item-keywords">
    <header>
        <h2>Keywords</h2>
    </header>
    {% for descriptive_keywords in item.resource.keywords_by_type.theme %}
        <div>
            <h3 class="bsk-h5">
                {{ descriptive_keywords.thesaurus.title.display_value }}
                {% if descriptive_keywords.thesaurus.title.href %}
                    <a href="{{ descriptive_keywords.thesaurus.title.href }}">
                        <i class="far fa-info-circle"></i>
                    </a>
                {% endif %}
            </h3>
            <ul class="bsk-list-unstyled app-keywords-list fa-ul">
                {% for theme_keyword in descriptive_keywords.terms %}
                    <li>
                        <span class="fa-li"><i class="far fa-tag"></i></span>
                        {{ theme_keyword.term }}
                        {% if theme_keyword.href %}
                            <a href="{{ theme_keyword.href }}"><i class="far fa-info-circle"></i></a>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </div>
        {% if not loop.last %}
            <hr />
        {% endif %}
    {% endfor %}
</section>
